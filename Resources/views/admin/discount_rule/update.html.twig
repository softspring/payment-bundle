{% trans_default_domain 'sfs_payment' %}
{% extends '@SfsCustomer/admin_layout.html.twig' %}

{% block title %}{{ 'admin_discount_rule.update.meta.title'|trans }}{% endblock %}

{% block breadcrums_content %}
    {{ parent() }}

    {% if app.request.attributes.get('_route') == 'sfs_payment_admin_discount_child_rules_update' %}
        {% set discount = app.request.attributes.get('discount') %}
        <li class="breadcrumb-item"><a href="{{ url('sfs_payment_admin_discounts_list') }}">{{ 'admin_discount.breadcrumb'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ url('sfs_payment_admin_discounts_read', {'discount':discount}) }}">{{ discount.name }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ 'admin_discount_rule.update.breadcrumb'|trans }}</li>
    {% else %}
        <li class="breadcrumb-item"><a href="{{ url('sfs_payment_admin_discount_rules_list') }}">{{ 'admin_discount_rule.breadcrumb'|trans }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ 'admin_discount_rule.update.breadcrumb'|trans }}</li>
    {% endif %}
{% endblock breadcrums_content %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3">{{ 'admin_discount_rule.update.title'|trans }}</h1>
    </div>
    {{ form_start(form) }}
    {{ form_rest(form) }}
    <div class="d-flex justify-content-end align-items-center">
        {% if app.request.attributes.get('_route') == 'sfs_payment_admin_discount_child_rules_update' %}
            <a href="{{ url('sfs_payment_admin_discounts_read', {'discount':app.request.attributes.get('discount')}) }}" class="btn btn-outline-secondary">{{ 'admin_discount_rule.update.actions.cancel.button'|trans }}</a>
        {% endif %}
        <input type="submit" value="{{ 'admin_discount_rule.update.actions.update.button'|trans }}" class="btn btn-primary ml-3" />
    </div>
    {{ form_end(form) }}
{% endblock content %}